<!-- Modal -->
<link rel="stylesheet" href="/css/recruiterRegister.css">
 <div class="mainRecruiter">
    <div class="modal fade" id="staticBackdropr" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabelr" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="staticBackdropLabelr">Apply for this Job</h1>
           
    
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/apply/<%=job._id%>/" method="POST" enctype="multipart/form-data">
              <label for="username">Username</label>
              <input type="text" id="username" name="name" placeholder="Enter your username" required>
              
              <label for="email">Email</label>
              <input type="email" id="email" name="email" placeholder="Enter your email" required>
              
              <label for="number">Contact</label>
              <input type="number" id="number" name="contact" placeholder="+91 _ _ _ _ _ _ _ _ _ _" required>
              <label for="file">Choose Resume</label>
              <input type="file" name="file" id="file" required/>
               
              <button type="submit">Submit</button>
            </form>
            </div>
            <div class="modal-footer">
               
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                
                  </div>
            
    
          </div>
        </div>
      </div>
 </div>
