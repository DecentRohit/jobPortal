<link rel="stylesheet" href="/css/applicant.css">
<% applicants.forEach(applicant=> { %>
  <div class="applicants">
    <p class="applicant-edit">
      <a href="/jobs/<%=job.id%>/applicants/<%=applicant.id%>"><img src="https://cdn-icons-png.flaticon.com/128/1827/1827933.png" ,
        alt="updateJob"></a>
    </p>
    <p class="applicant-name"><strong>Name:</strong>
      <%=applicant.name%>
    </p>
    <p class="applicant-email"> <strong>Email:</strong>
      <%=applicant.email%>
    </p>
    <p class="applicant-contact"> <strong>Contact:</strong>
      <%=applicant.contact%>
    </p>
  
    

    <div id="fileViewer"><button onclick="window.open('<%=applicant.resumePath%>', '_blank')">View Resume</button></div>
    <p class="applicant-delete"> 
      <form action="/jobs/<%=job.id%>/applicants/<%=applicant.id%>/delete" method="POST"
        onsubmit="return confirm('Are you sure you want to delete this Job?')">
        <button type="submit"><img src="https://cdn-icons-png.flaticon.com/128/9790/9790368.png"
            style="width: 30px; height: 35px;" alt="delete"></button>
      </form>
    </p>
  </div>
  <% }); %>