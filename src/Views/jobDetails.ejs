<div class="jobDetails">
  <h2 class="job-designation">
    <%=job.Designation%>
  </h2>
  <% if (locals.userInfo) { %>
    <a href="/jobs/<%=job.id%>/update"><img src="https://cdn-icons-png.flaticon.com/128/5309/5309792.png" ,
        alt="updateJob"></a>
    <form action="/jobs/<%=job.id%>" method="post"
      onsubmit="return confirm('Are you sure you want to delete this Job?')">
      <button type="submit"><img src="https://cdn-icons-png.flaticon.com/128/9790/9790368.png"
          style="width: 30px; height: 35px;" alt="delete"></button>
    </form>

    <% } %>
      <p class="job-category"><strong>Category:</strong>
        <%=job.Category%>
      </p>
      <p class="company-name"> <strong>Company:</strong>
        <%=job.companyName%>
      </p>
      <p class="job-location"> <strong>Location:</strong>
        <%=job.Location%>
      </p>
      <p class="salary"> <strong>Salary: </strong>
        <%=job.salary%>
      </p>
      <p class="openings"> <strong>Openings:</strong>
        <%=job.numberOfOpenings%>
      </p>
      <p class="skills-required"> <strong>Skills:</strong>
        <%=job.skillsRequired%>
      </p>
      <p class="apply-by"> <strong>Apply By: </strong>
        <%=job.applyBy.toDateString()%>
      </p>
      <p class="job-posted"> <strong>Posted On: </strong>
        <%=job.postedOn.toDateString()%>
      </p>
      <% if (locals.userInfo) { %>
        <p class="applicants"> <strong><a href="/jobs/<%=job.id%>/applicants">Applicants : </a></strong>
          <%=job.applicants.length%>
        </p>
        <% } else { %>
          <p class="applicants"> <strong>Applicants</strong> : <%=job.applicants.length%>
          </p>
          <% } %>

            <button type="submit" class="applyBtn" data-bs-toggle="modal" data-bs-target="#staticBackdropr">Apply
              Now</button>

</div>
<div class="container mt-4">
  <%- include('applicantRegister') %>
</div>